!!!
%html
  %head
    %title Freemark
    = stylesheet_link_tag 'grid.css', :media => 'screen, projection'
    = stylesheet_link_tag 'text.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    .container_12
      .menu_container
        %ul
          %li
            - if current_user
              Welcome
              = link_to current_user.email, "/"
            - else
              = link_to "Sign In", new_user_session_path
          %li
            = link_to "Inbox", "#"
          %li
            = link_to "Settings", "#"
          %li
            = link_to "Sign Out", destroy_user_session_path if current_user
      .main_content
        .left
        
        .right
          = yield
      .sidebar_content
